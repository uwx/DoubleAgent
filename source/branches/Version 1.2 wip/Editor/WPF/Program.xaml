			<!-- =========================================================================== -->

			<Style x:Key="MenuItemCut"
				   TargetType="MenuItem">
				<Setter Property="Header"
						Value="_Cut" />
				<Setter Property="Command"
						Value="ApplicationCommands.Cut" />
				<Setter Property="CommandParameter"
						Value="{Binding RelativeSource={RelativeSource Mode=Self}}" />
				<Setter Property="Icon">
					<Setter.Value>
						<Image Source="{StaticResource ImgEditCut}"
							   Stretch="UniformToFill"
							   Width="16"
							   Height="16" />
					</Setter.Value>
				</Setter>
			</Style>

			<Style x:Key="MenuItemCopy"
				   TargetType="MenuItem">
				<Setter Property="Header"
						Value="_Copy" />
				<Setter Property="Command"
						Value="ApplicationCommands.Copy" />
				<Setter Property="CommandParameter"
						Value="{Binding RelativeSource={RelativeSource Mode=Self}}" />
				<Setter Property="Icon">
					<Setter.Value>
						<Image Source="{StaticResource ImgEditCopy}"
							   Stretch="UniformToFill"
							   Width="16"
							   Height="16" />
					</Setter.Value>
				</Setter>
			</Style>

			<Style x:Key="MenuItemPaste"
				   TargetType="MenuItem">
				<Setter Property="Header"
						Value="_Paste" />
				<Setter Property="Command"
						Value="ApplicationCommands.Paste" />
				<Setter Property="CommandParameter"
						Value="{Binding RelativeSource={RelativeSource Mode=Self}}" />
				<Setter Property="Icon">
					<Setter.Value>
						<Image Source="{StaticResource ImgEditPaste}"
							   Stretch="UniformToFill"
							   Width="16"
							   Height="16" />
					</Setter.Value>
				</Setter>
			</Style>

			<Style x:Key="MenuItemDelete"
				   TargetType="MenuItem">
				<Setter Property="Header"
						Value="_Delete" />
				<Setter Property="Command"
						Value="ApplicationCommands.Delete" />
				<Setter Property="CommandParameter"
						Value="{Binding RelativeSource={RelativeSource Mode=Self}}" />
				<Setter Property="Icon">
					<Setter.Value>
						<Image Source="{StaticResource ImgEditDelete}"
							   Stretch="UniformToFill"
							   Width="16"
							   Height="16" />
					</Setter.Value>
				</Setter>
			</Style>

			<ContextMenu x:Key="ContextMenuEdit">
				<MenuItem Style="{StaticResource MenuItemCut}" />
				<MenuItem Style="{StaticResource MenuItemCopy}" />
				<MenuItem Style="{StaticResource MenuItemPaste}" />
				<MenuItem Style="{StaticResource MenuItemDelete}" />
			</ContextMenu>

			<!-- =========================================================================== -->

			<ContextMenu x:Key="ContextMenuTextBox">
				<MenuItem Style="{StaticResource MenuItemCut}" />
				<MenuItem Style="{StaticResource MenuItemCopy}" />
				<MenuItem Style="{StaticResource MenuItemPaste}" />
			</ContextMenu>

			<Style x:Key="{x:Type custom:TextBoxEx}"
				   TargetType="{x:Type custom:TextBoxEx}"
				   BasedOn="{StaticResource {x:Type TextBox}}">
				<Setter Property="ContextMenu"
						Value="{StaticResource ContextMenuTextBox}" />
			</Style>

			<!-- =========================================================================== -->
			<!-- ToolBarButton (defined here because ImageState is in this assembly)         -->
			<!-- =========================================================================== -->

			<Style x:Key="ImageStateButton"
				   BasedOn="{StaticResource {x:Static ToolBar.ButtonStyleKey}}"
				   TargetType="{x:Type ButtonBase}">
				<Setter Property="Padding"
						Value="0" />
				<Setter Property="Template">
					<Setter.Value>
						<ControlTemplate TargetType="{x:Type ButtonBase}">
							<Border Name="Bd"
									Background="Transparent"
									BorderBrush="Transparent"
									BorderThickness="{TemplateBinding BorderThickness}"
									Padding="{TemplateBinding Padding}"
									SnapsToDevicePixels="true">
								<ContentPresenter Name="Content"
												  HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
												  VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
												  SnapsToDevicePixels="False"
												  UseLayoutRounding="False" />
							</Border>
							<ControlTemplate.Triggers>
								<Trigger Property="IsEnabled"
										 Value="false">
									<Setter Property="Foreground"
											Value="{DynamicResource {x:Static SystemColors.ControlDarkBrushKey}}" />
								</Trigger>
								<MultiTrigger>
									<MultiTrigger.Conditions>
										<Condition Property="IsEnabled"
												   Value="false" />
										<Condition SourceName="Content"
												   Property="custom:ImageState.DisabledSource"
												   Value="{x:Null}" />
									</MultiTrigger.Conditions>
									<Setter TargetName="Content"
											Property="Opacity"
											Value="0.3" />
								</MultiTrigger>
							</ControlTemplate.Triggers>
						</ControlTemplate>
					</Setter.Value>
				</Setter>
			</Style>

			<!-- =========================================================================== -->

		</ResourceDictionary>
	</Application.Resources>
</Application>
